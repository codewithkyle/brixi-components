{
    "name": "brixi-components",
    "version": "0.1.0",
    "description": "",
    "scripts": {
        "cleanup": "node ./build-tools/cleanup.js",
        "bundle": "snowpack",
        "brixi": "brixi",
        "compile": "tsc",
        "render": "node ./build-tools/renderer.js",
        "sass:dev": "cssmonster --e dev",
        "sass:prod": "cssmonster",
        "build": "npm run cleanup && npm run render && npm run compile && npm run sass:dev && djinnjs -e dev && npm run cleanup",
        "production": "npm run cleanup && npm run render && npm run compile && npm run sass:prod && djinnjs -e production && npm run cleanup && npm run zip",
        "preview": "serve ./public",
        "deploy": "node ./build-tools/deploy.js",
        "zip": "node ./build-tools/zipper.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/codewithkyle/brixi-components.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/codewithkyle/brixi-components/issues"
    },
    "homepage": "https://components.brixi.dev/",
    "devDependencies": {
        "archiver": "^4.0.2",
        "cssmonster": "^0.2.1",
        "djinnjs": "0.0.28",
        "dotenv": "^8.2.0",
        "gh-pages": "^3.1.0",
        "glob": "^7.1.6",
        "prettier": "^2.1.2",
        "serve": "^11.3.2",
        "snowpack": "^1.7.1",
        "typescript": "^4.0.5"
    },
    "dependencies": {
        "brixi": "^0.2.3"
    }
}
